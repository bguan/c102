{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "-Wall",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/src/*.c",
                "-o",
                "${workspaceFolder}/.vscode/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "C/C++: clang++ build active file",
            "dependsOn": ["subtask to build all c files except main"], 
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-Wall",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/test_src/*.cpp",
                "${workspaceFolder}/.vscode/*.o",
                "-o",
                "${workspaceFolder}/.vscode/${fileBasenameNoExtension}",
                "-L/usr/local/lib",
                "-lCppUTest",
                "-lCppUTestExt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task hand crafted."
        },
        {
            "type": "shell",
            "label": "subtask to build all c files except main",
            "dependsOn": ["subtask to build all c files"],
            "command": "rm -f ${workspaceFolder}/.vscode/main.o"
        },
        {
            "type": "shell",
            "label": "subtask to build all c files",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "-Wall",
                "-I${workspaceFolder}/include",
                "-c",
                "${workspaceFolder}/src/*.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}/.vscode"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}
