{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-g",
                "-Wall",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/src/*.c",
                "-o",
                "${workspaceFolder}/.vscode/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "-Wall",
                "-I${workspaceFolder}/include",
                "-lCppUTest",
                "-lCppUTestExt",
                "${workspaceFolder}/src/*.c",
                "${workspaceFolder}/test-src/*.cpp",
                "-o",
                "${workspaceFolder}/.vscode/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
