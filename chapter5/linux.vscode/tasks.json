{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-Wall",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/src/*.c",
                "-o",
                "${workspaceFolder}/.vscode/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "dependsOn": ["subtask to build all c files except main"], 
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-Wall",
                "-I${workspaceFolder}/include",
                "${file}",
                "${workspaceFolder}/.vscode/*.o",
                "-o",
                "${workspaceFolder}/.vscode/${fileBasenameNoExtension}",
                "-pthread",
                "-L/usr/lib/x86_64-linux-gnu",
                "-lCppUTest", 
                "-lCppUTestExt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "subtask to build all c files except main",
            "dependsOn": ["subtask to build all c files"],
            "command": "rm -f ${workspaceFolder}/.vscode/main.o"
        },
        {
            "type": "shell",
            "label": "subtask to build all c files",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-Wall",
                "-I${workspaceFolder}/include",
                "-c",
                "${workspaceFolder}/src/*.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}/.vscode"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
