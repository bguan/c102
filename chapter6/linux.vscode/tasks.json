{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build main file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/src/*.c",
                "-o",
                "${workspaceFolder}/.vscode/main",
                "-lm",
                "-lncurses"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build test main file",
            "dependsOn": "subtask to build all c files except main",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I${workspaceFolder}/include",
                "${workspaceFolder}/.vscode/*.o",
                "${workspaceFolder}/test_src/*.cpp",
                "-o",
                "${workspaceFolder}/.vscode/test_main",
                "-lm",
                "-lncurses",
                "-lCppUTest",
                "-lCppUTestExt"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "subtask to build all c files except main",
            "dependsOn": ["subtask to build all c files"],
            "command": "rm -f ${workspaceFolder}/.vscode/main.o"
        },
        {
            "type": "shell",
            "label": "subtask to build all c files",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "-Wall",
                "-I${workspaceFolder}/include",
                "-c",
                "${workspaceFolder}/src/*.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}/.vscode"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ],
    "version": "2.0.0"
}